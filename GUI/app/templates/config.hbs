{{notification-container position="top-right"}}
<div class="config-editor">
  <button class="config_button" {{action "loadConfig"}}>Загрузить</button>
  <button class="config_button" {{action "saveConfig"}}>Сохранить</button>
  <button class="config_button" {{action "addBlock"}}>Добавить модуль</button>
  <div class="config-editor-pane">
    {{#draggable-dropzone}}
      {{#each this.model as |block|}}
        <BlockEditor @content={{block.id}} @block={{block}} @addAwpPc="addAwpPc" @addAwpPj="addAwpPj" @addPc="addPc" @addPj="addPj"/>
      {{/each}}
    {{/draggable-dropzone}}
  </div>
</div>